FLASK_ENV=development
SECRET_KEY=change-this-secret
DATABASE_URL=sqlite:///scholagro.db
# For Postgres example: DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/scholagro
# For MySQL example: DATABASE_URL=mysql+pymysql://user:password@localhost:3306/scholagro
SECURITY_PASSWORD_SALT=change-this-salt
# Mpesa Daraja
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORT_CODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=http://localhost:5000/payments/mpesa/callback

# Cloudinary (choose one)
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# SMTP Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SENDER="ScholaGro <no-reply@scholagro.com>"

# Stripe (optional card payments)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Monitoring
SENTRY_DSN=

# Caching
# CACHE_TYPE can be SimpleCache (default) or RedisCache in prod
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
